<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncryptorNDecryptor.Pages.TextEncryption.DecryptionPage">
    <VerticalStackLayout Padding="30">
        
        <Editor x:Name="InputEncryptedMessageEditor"
                BackgroundColor="WhiteSmoke"
                Keyboard="Plain"
                Text="Enter encrypted message"
                TextColor="Gray"
                HeightRequest="120"
                Focused="Editor_Focused">
            <Editor.GestureRecognizers>
                <TapGestureRecognizer Tapped="InputEncryptedMessageEditor_Tapped" />
            </Editor.GestureRecognizers>
        </Editor>
        
        <Button x:Name="DecryptMessageButton"
                Text="Decrypt message" Clicked="DecryptMessageButton_Clicked"/>

        <Editor x:Name="DecryptedMessageEditor" 
                BackgroundColor="WhiteSmoke"
                IsEnabled="False"
                Keyboard="Plain"
                Text="Here will be encrypted message"
                TextColor="Gray"
                HeightRequest="120"
                Focused="Editor_Focused">
        </Editor>
        <Button x:Name="CopyDecryptedMessage"
                Text="Copy" Clicked="CopyDecryptedMessage_OnClicked"/>
        
    </VerticalStackLayout>
</ContentPage>